<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowTimeActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:scaleType="fitXY"
        android:src="@drawable/creed21"/>


        <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:textColorNormal="#9d9d9d"
            android:elevation="2dp"
            app:selectedDateBackground="@drawable/gradient_rectangle"
            app:textColorSelected="#FFFF"/>


    <customfonts.MyTextView_PTSans_Bold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English 2D"
        android:textColor="#FFFFFF"
        android:textSize="13.8sp"
        android:paddingTop="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="9dp"
        android:paddingBottom="9dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginTop="17dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/gradient_roundshape2"/>


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/showtime_recycleview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="70dp"
    android:clipToPadding="false"></androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <customfonts.MyTextView_PTSans_Bold
        android:id="@+id/booktickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13.8sp"
        android:background="@drawable/green_rectangle"
        android:paddingTop="19dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:text="book tickets"/>

</RelativeLayout>