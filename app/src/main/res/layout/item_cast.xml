<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
 android:paddingRight="22.3dp"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cast_image"
        android:layout_width="65.3dp"
        android:layout_height="65.3dp"
        android:layout_gravity="center"
        android:src="@drawable/cast1" />

    <customfonts.MyTextView_PTSans_Regular
        android:id="@+id/cast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Michael B.\nJordan"
        android:textColor="#9d9d9d"
        android:maxLines="2"
        android:layout_marginTop="8.3dp"
        android:textSize="12.5sp" />


</LinearLayout>