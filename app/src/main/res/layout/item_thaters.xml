<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="ContentDescription"
    android:layout_marginLeft="17dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/poster1"
            android:layout_width="155dp"
            android:layout_height="206dp"
            android:scaleType="fitXY"
            android:src="@drawable/venomposter"/>


    </androidx.cardview.widget.CardView>

    <customfonts.MyTextView_PTSans_Bold
        android:id="@+id/poster_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:textColor="#27292d"
        android:lineSpacingExtra="-11sp"
        android:text="Venom(2018)"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <customfonts.MyTextView_PTSans_Regular
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12.7sp"
            android:textColor="#9d9d9d"
            android:lineSpacingExtra="-8.7sp"
            android:text="Hindi, English"
            />


        <ImageView
            android:layout_width="11.7dp"
            android:layout_height="10.3dp"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:src="@drawable/like"/>


        <customfonts.MyTextView_PTSans_Regular
            android:id="@+id/poster_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.7sp"
            android:textColor="#9d9d9d"
            android:lineSpacingExtra="-8.7sp"
            android:text="83%"
            />

    </LinearLayout>

</LinearLayout>